# ===== QTS app & scheduler =====
QTS_TIMEZONE=Asia/Dhaka
QTS_API_KEY=your-api-key
QTS_LOG_LEVEL=INFO

# App DB name
QTS_MONGODB_DB=db_name

# ===== MongoDB (AUTH enabled) =====
# Used by the mongo container on FIRST init of an empty data volume
MONGO_INITDB_ROOT_USERNAME=username
MONGO_INITDB_ROOT_PASSWORD=pass

# App connection string -> uses root credentials (authSource=admin)
QTS_MONGODB_URI="mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongo:xxxx/qtsbook?authSource=admin"

# ===== mongo-express (browser GUI) =====
# GUI login (Basic Auth for the web page)
ME_CONFIG_BASICAUTH_USERNAME=me-user
ME_CONFIG_BASICAUTH_PASSWORD=me-password

# DB login (how mongo-express connects to MongoDB when AUTH is enabled)
ME_CONFIG_MONGODB_ADMINUSERNAME=${MONGO_INITDB_ROOT_USERNAME}
ME_CONFIG_MONGODB_ADMINPASSWORD=${MONGO_INITDB_ROOT_PASSWORD}
# Mongo service hostname inside the compose network
ME_CONFIG_MONGODB_SERVER=mongo

# ===== Email Alerts (SMTP) =====
ALERT_SMTP_HOST=smtp.example.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=your-smtp-user
ALERT_SMTP_PASS=your-smtp-password
ALERT_FROM=alerts@example.com
ALERT_TO=recipient@example.com

# ===== Dashboard =====
QTS_ADMIN_USER=username
QTS_ADMIN_PASS=password
DASHBOARD_MONGO_UI_URL=http://localhost:xxxx
